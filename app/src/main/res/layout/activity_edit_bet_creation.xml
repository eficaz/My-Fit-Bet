            <TableRow
                android:id="@+id/row5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center|left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/bet_distance_by_km"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"
                        android:fontFamily="@font/lato_bold"
                        android:text="@string/bet_distance_by_km"
                        android:textColor="@color/light_blue"
                        android:textSize="12dp" />
                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:background="@color/light_blue"
                        android:layout_height="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="OR"
                        android:visibility="gone"
                        android:textColor="@color/black"
                        android:textSize="14dp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/bet_distance_by_location"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"
                        android:fontFamily="@font/lato_bold"
                        android:text="@string/bet_distance_location"
                        android:textColor="@color/light_blue"
                        android:textSize="12dp" />
                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:background="@color/light_blue"
                        android:layout_height="5dp"/>
                </LinearLayout>

            </TableRow>
            <TableRow
                android:id="@+id/row6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center|left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1" >
                <EditText
                    android:id="@+id/edBet_km"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/bet_km"
                    android:fontFamily="@font/lato_regular"
                    android:textColorHint="@color/hint_text_color"
                    android:textColor="@color/main_text_color"
                    android:textSize="14dp"
                    android:inputType="numberDecimal"
                    />
                <TextView
                    android:id="@+id/bet_km"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/bet_km"
                    android:textColorHint="@color/hint_text_color"
                    android:textColor="@color/main_text_color"
                    android:visibility="gone"
                    android:textSize="14dp"
                    android:inputType="text"
                     />
            </TableRow>

            <TableRow
                android:id="@+id/fromRow"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center|left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/from_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/from"
                    android:fontFamily="@font/lato_regular"
                    android:textColorHint="@color/hint_text_color"
                    android:textColor="@color/main_text_color"
                    android:singleLine="true"
                    android:textSize="14dp"
                    android:inputType="text"
                    />
            </TableRow>

            <TableRow
                android:id="@+id/toRow"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center|left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/to_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/to"
                    android:fontFamily="@font/lato_regular"
                    android:textColorHint="@color/hint_text_color"
                    android:textColor="@color/main_text_color"
                    android:singleLine="true"
                    android:textSize="14dp"
                    android:inputType="text"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/btnCreateBet"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:paddingLeft="20dp"
                    android:fontFamily="@font/lato_bold"
                    android:paddingRight="20dp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_button_roud_corner"
                    android:backgroundTint="@color/light_blue"
                    android:text="@string/update_bet" />

            </TableRow>
            <Space
                android:id="@+id/space"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>