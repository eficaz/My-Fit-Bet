<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/betmain_bg"
    android:layout_height="match_parent">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center|start"
        android:layout_weight="2">


    <TableRow
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/margin_20"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/margin_20"
            android:textColor="@color/light_blue"
            android:text="@string/bet" />
    </TableRow>
    <TableRow
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TableRow
            android:id="@+id/messgae_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginStart="@dimen/margin_30"
            >
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/size_70"
            android:layout_height="@dimen/size_70"
            android:src="@drawable/top_mesage_icon" />
        </TableRow>
    </TableRow>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom|center"
        android:gravity="center|bottom"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1.5">

        <LinearLayout
            android:id="@+id/upcomming_bets"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/upcomming_bets_imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/join_bet_icon"
                />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="10dp"
                android:gravity="center"
                android:singleLine="true"
                android:maxLines="1"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/main_text_color"
                android:text="@string/join_bets" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_bets"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/my_bets_imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/my_bet_icon"
                 />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:maxLines="1"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/main_text_color"
                android:textSize="10dp"
                android:text="@string/my_bets1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bt_joinbet"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bt_joinbet_imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/up_coming_bet_icon"
                />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:maxLines="1"
                android:fontFamily="@font/lato_regular"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text_color"
                android:textSize="10dp"
                android:text="@string/upcomming_bets1"
                 />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bt_createBet"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bt_createBet_imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/create_bet"
                 />

            <TextView
                android:id="@+id/textView36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:maxLines="1"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/main_text_color"
                android:textSize="10dp"
                android:text="@string/create_bet" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bt_createGroup"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bt_createGroup_imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/create_group_icon"
                 />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:maxLines="1"
                android:fontFamily="@font/lato_regular"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text_color"
                android:textSize="10dp"
                android:text="@string/create_group" />
        </LinearLayout>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:layout_gravity="bottom|center"
        android:gravity="center|bottom"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginBottom="20dp"
        android:layout_weight="1.5">
        <Button
            android:id="@+id/bt_createBet1"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:textSize="@dimen/margin_15"
            android:layout_height="@dimen/size_40"
            android:background="@drawable/shape_button_roud_corner"
            android:backgroundTint="@color/light_blue"
            android:text="@string/create_bet"
            android:textAllCaps="false"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/bt_createGroup1"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="@dimen/size_40"
            android:background="@drawable/shape_button_roud_corner"
            android:backgroundTint="@color/light_blue"
            android:text="@string/create_group"
            android:textSize="@dimen/margin_15"
            android:textAllCaps="false"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/bt_createArchives"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="@dimen/size_40"
            android:textSize="@dimen/margin_15"
            android:textAllCaps="false"
            android:background="@drawable/shape_button_roud_corner"
            android:backgroundTint="@color/light_green"
            android:text="@string/archives"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/bt_joinbet1"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="@dimen/size_40"
            android:textSize="@dimen/margin_15"
            android:textAllCaps="false"
            android:background="@drawable/shape_button_roud_corner"
            android:backgroundTint="@color/light_green"
            android:text="@string/join_bets"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            android:textColor="@color/white" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="0dp"
                android:visibility="gone"
                android:layout_weight="1.5">

                <TableRow
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:id="@+id/upcomming_bets1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TableRow

                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="match_parent" >

                            <ImageView
                                android:id="@+id/upcomming_bets_img"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="left|center"
                                android:layout_marginRight="5dp"
                                 />

                            <TextView
                                android:id="@+id/tv_upcomming_bets"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginLeft="5dp"
                                android:text="@string/upcomming_bets"
                                android:textColor="@color/gray_1" />
                        </TableRow>
                        <View
                            android:id="@+id/upcomming_bets_view_line"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_gravity="center"
                            android:background="@color/light_blue" />
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/white"
                    android:layout_height="match_parent" >
                    <LinearLayout
                        android:id="@+id/my_bets1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TableRow

                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="match_parent" >

                            <ImageView
                                android:id="@+id/my_bets_img"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="left|center"
                                android:layout_marginRight="5dp"
                                 />

                            <TextView
                                android:id="@+id/tv_my_bets"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginLeft="5dp"
                                android:text="@string/my_bets"
                                android:textColor="@color/gray_1" />
                        </TableRow>

                        <View
                            android:id="@+id/my_bet_view"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_gravity="center"
                            android:background="@color/gray_1" />
                    </LinearLayout>

                </TableRow>
            </TableRow>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:background="@drawable/shape_button_roud_corner1"
                    android:layout_marginRight="@dimen/margin_10"
                    >



                    <EditText
                        android:id="@+id/searchview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="flagNoExtractUi"
                        android:inputType="text|textNoSuggestions"
                        android:background="@drawable/shape_button_roud_corner1"
                        android:drawableLeft="@drawable/search"
                        android:maxLength="30"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/main_text_color"
                        android:textSize="12dp"
                        />
                    <!-- <SearchView
                         android:id="@+id/searchview"
                         android:layout_width="match_parent"
                         android:queryHint="@string/search"
                         android:layout_gravity="center"
                         android:gravity="center"
                         android:layout_height="match_parent" />-->
                </TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/no_data"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:textColor="@color/main_text_color"
                        android:visibility="gone"
                        android:gravity="center"
                        android:text="@string/no_bets" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </TableRow>
</LinearLayout>
