<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/layout_whight_border"
    android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:padding="@dimen/margin_10"
    android:id="@+id/row"
    android:layout_marginTop="5dp"
    android:layout_height="80dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.androidapp.fitbet.utils.CircleImageView
                    android:id="@+id/img_user"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:src="@drawable/fitbet__bet_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_5"
                android:orientation="vertical">




                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_Name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:textColor="@color/main_text_color"
                        android:text=""
                        android:textSize="14dp"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="center|left"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_Description"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:text=""
                        android:textSize="10dp"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="center|left"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/users_count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:text="0"
                        android:drawableLeft="@drawable/coin_icon"
                        android:textSize="10dp"
                        android:drawablePadding="7dp"
                        android:textColor="@color/hint_text_color"
                        android:layout_marginRight="15dp"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="center|left"
                        />
                    <TextView
                        android:id="@+id/left_days"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:text="0"
                        android:textSize="10dp"
                        android:textColor="@color/hint_text_color"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="center|left"
                        />
                </TableRow>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".8"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TableRow
                    android:id="@+id/button_row"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content" >
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="horizontal">
                    <Button
                        android:id="@+id/join_now"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:textSize="10sp"
                        android:fontFamily="@font/lato_bold"
                        android:background="@drawable/shape_button_roud_corner"
                        android:backgroundTint="@color/light_green"
                        android:textColor="@color/white"
                        android:text="@string/join_now" />

                    <Button
                        android:id="@+id/start"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textSize="10sp"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/margin_5"
                        android:visibility="visible"
                        android:background="@drawable/shape_button_roud_corner"
                        android:backgroundTint="@color/light_blue"
                        android:textColor="@color/white"
                        android:text="@string/decline" />
</LinearLayout>
                </TableRow>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>