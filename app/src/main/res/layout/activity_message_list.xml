<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/profile_details_bg"
    android:layout_height="match_parent"
    tools:context=".ui.MessageListActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="10"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:gravity="center|start"
            android:layout_weight=".8">

            <TableRow
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/back_white" />
            </TableRow>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/white"
                android:text="@string/messages" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:gravity="center|start"
            android:layout_weight="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:gravity="center|start">

                <EditText
                    android:id="@+id/searchview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_button_roud_corner1"
                    android:drawableStart="@drawable/search"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="text|textNoSuggestions"
                    android:maxLength="30"
                    android:padding="10dp"
                    android:textIsSelectable="false"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/main_text_color"
                    android:textSize="12sp" />
            </TableRow>
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TableRow
                            android:layout_width="match_parent"
                            android:background="@drawable/layout_border"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_height="match_parent" >

                            <TableRow
                                android:id="@+id/row_upcomming"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent" >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_marginStart="20dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textView31"
                                        android:layout_width="match_parent"
                                        android:layout_gravity="center|start"
                                        android:gravity="center|start"
                                        android:textColor="@color/main_text_color"
                                        android:fontFamily="@font/lato_regular"
                                        android:layout_height="wrap_content"
                                        android:text="@string/upcomming_bets1" />

                                    <View
                                        android:id="@+id/view_line"
                                        android:layout_width="match_parent"
                                        android:layout_height="3dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@color/light_green" />
                                    <View
                                        android:id="@+id/view_line1"
                                        android:layout_width="match_parent"
                                        android:layout_height="3dp"
                                        android:visibility="gone"
                                        android:layout_marginTop="5dp"
                                        android:background="@color/gray_1" />
                                </LinearLayout>
                            </TableRow>

                            <TableRow
                                android:id="@+id/row_archives"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent" >

                                <LinearLayout

                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="20dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textView33"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center|start"
                                        android:gravity="center|start"
                                        android:textColor="@color/main_text_color"
                                        android:fontFamily="@font/lato_regular"
                                        android:text="@string/archies_bets" />
                                    <View
                                        android:id="@+id/view_line2"
                                        android:layout_width="match_parent"
                                        android:layout_height="3dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@color/light_green" />
                                    <View
                                        android:id="@+id/view_line3"
                                        android:layout_width="match_parent"
                                        android:layout_height="3dp"
                                        android:visibility="gone"
                                        android:layout_marginTop="5dp"
                                        android:background="@color/gray_1" />
                                </LinearLayout>
                            </TableRow>
                        </TableRow>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/no_data"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:textColor="@color/main_text_color"
                            android:visibility="gone"
                            android:gravity="center"
                            android:text="@string/no_bets" />
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/list"
                            android:layout_marginEnd="@dimen/margin_5"
                            android:layout_marginStart="@dimen/margin_5"
                            android:layout_width="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                </LinearLayout>

            </TableRow>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>